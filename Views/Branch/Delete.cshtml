

@using RDMS.Models.Dtos;
@model BranchDto;
@{
    ViewData["Title"] = "Delete Branch";
}

<div class="border mt-4">
    <div class="col-lg-12"><center><h1>@ViewData["Title"]</h1></center></div>
    <div class="row">
        <div class="col-lg-3"></div>
        <div class="col-lg-6">
            <div class=""><center>Are you sure you want to delete this Branch?</center></div>
            <table class="table table-bordered table-striped">
                <tbody>
                    <tr>
                        <td><strong>Id</strong></td>
                        <td>@Model.Id</td>
                    </tr>
                    <tr>
                        <td><strong>Branch Name</strong></td>
                        <td>@Model.Name</td>
                    </tr>
                    <tr>
                     <tr>
                        <td><strong>Branch city</strong></td>
                        <td>@Model.AddressName.City</td>
                    </tr> 
                     <tr>
                        <td><strong>Branch street</strong></td>
                        <td>@Model.AddressName.Street</td>
                    </tr> 
                     <tr>
                        <td><strong>Branch state</strong></td>
                        <td>@Model.AddressName.State</td>
                    </tr> 
                     <tr>
                        <td><strong> Zipcode </strong></td>
                        <td>@Model.AddressName.ZipCode</td>
                    </tr> 
                </tbody>
            </table>
            <div class="text-end">
                <form asp-action="Delete">
                    <input type="hidden" name="id" value="@Model.Id" />
                    <button type="submit" class="btn btn-danger" style="width: 30%;">Delete Branch</button>
                </form>
            </div>
        </div>
        <div class="col-lg-3"></div>
    </div>
</div>