<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        /* Adjust the spacing for the form */
        .form-group {
            margin-bottom: 20px;
        }

        /* Style the form header */
        h2 {
            color: #333;
            font-size: 24px;
            margin-bottom: 30px;
        }

        /* Style the submit button */
        button[type="submit"] {
            background-color: #007bff;
            color: #fff;
            border: none;
            padding: 10px 20px;
            font-size: 16px;
            border-radius: 4px;
            cursor: pointer;
        }

        /* Responsive styles */
         {
            h2 {
                font-size: 20px;
            }

            button[type="submit"] {
                font-size: 14px;
            }
        }
    </style>
    <title>Add Food</title>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h2>Add Food</h2>
                <form asp-action="AddFood" asp-controller="Food" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="Id" hidden>Id</label>
                        <input name="Id"   type="hidden" id="Id" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label for="FoodName">Food Name</label>
                        <input name="FoodName" type="text" id="FoodName"  class="form-control"  required/>
                    </div>
                    <div class="form-group">
                        <label for="Price">Price</label>
                        <input type="number" name="Price"    class="form-control" required />
                    </div>
                    <div class="form-group">
                        <label for="Quantity">Quantity</label>
                        <input type="number" name="Quantity"   id="Quantity" class="form-control" required/>
                    </div>
                   
                     <div class="form-group">
                    <select name="Name" class="form-control"required >   
                   @foreach (var item in Model.Data)
                     {
                        @* <option value="none" disabled selected>--- Food Categories ---</option> *@
                        <option name="Name" value="Name" >@item.Name</option>  
                     }
                    </select>
            </div>
                    <div class="form-group">
                        <label for="OrderStatus">Status</label>
                        <select name="OrderStatus"   class="form-control"required >
                            <option value="none" disabled selected> --- Select Status ---</option>
                            @* <option value="2">Processing</option>
                            <option value="3">Done</option> *@
                            <option value="7">Available</option>
                        </select>
                    </div>
                    <div class="form-group" required>
                        <label for="Image">Food Image</label>
                        <input type="file" name="Image" id="Image"   class="form-control-file" />
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
