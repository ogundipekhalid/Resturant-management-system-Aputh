
    

    @using RDMS.Models.Dtos
@model IEnumerable<OrderDto>

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">

<style>
    .container {
        margin-top: 20px;
        background-color: #f8f9fa;
        padding: 20px;
        border-radius: 5px;
    }
     
    h3 {
        text-align: center;
        margin-bottom: 20px;
    }
    
    .table-responsive {
        margin-bottom: 20px;
    }
    
    .btn-group {
        margin-bottom: 20px;
    }
</style>

<div class="container">
    <h3>@ViewData["Title"]</h3>
    <div class="table-responsive">
        <table class="table table-striped table-hover table-bordered">
            <tbody>
                
                <tr>
                    <td>Id</td>
                    <td>Reference Number</td>
                    <td>Price</td>
                    <td>Status</td>
                    <td>Email</td>
                    <td>City</td>
                    <td>Street</td>
                    <td>State</td>
                    <td>MarkAsDeliver</td>
                </tr>
                @if (Model.Count() > 0)
                {
                   @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.ReferenceNumber</td>
                            <td>@item.TotalAmount</td>
                            <td>@item.OrderStatus</td>
                            <td>@item.CustomerDto.Email</td>
                            <td>@item.City</td>
                            <td>@item.Street</td>
                            <td>@item.State</td>
                            <td id="Remove" name="@item.Id  @item.ReferenceNumber  @item.Price @item.City @item.Street @item.State @item.OrderStatus "  >
                                  <a class="btn-warning btn" asp-action="DeliveryStatus" asp-controller="Order"  asp-route-id=@item.Id style="border-radius: 5px;">Delivery</a>
                            </td>
                        </tr>
                    }
                     @* SerialNumber++; *@
                }
                else
                {
                    <tr>
                        <td colspan="5" class="text-center">No Order found</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="btn-group">
         @* <button class="btn-danger btn" asp-action="Customer" asp-controller="User" > Back </button> *@
    </div>
</div>

 