

@using RDMS.Models.Dtos
@model IEnumerable<BranchDto>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/font-awesome.min.css" />
    <script src="~/scripts/w3.js"></script>
    <div class="form-group">
       <i class="fa fa-search-minus"></i><input type="search" id="search" class="form-control" oninput="w3.filterHTML('#list', '.staff', this.value)" placeholder="Search for Branches">
    </div>
@if (@Model == null || @Model.Count() == 0)
{
    <h1>Noting  yet</h1>
}
else 
{
    <div class="table-responsive">
        <table class="table" id="list">
            <caption>List of Branch</caption>
            <thead>
                <tr>
                    <th scope="col">S/N</th>
                    <th scope="col">Name & Address </th>
                    @* <th scope="col">Details</th>
                    <th scope="col">Update </th> *@
            </thead>
            <tbody>
                @foreach (var branch in @Model)
                {
                    <tr class="staff">
                        <th scope="row">@branch.Id</th>
                        <td>@branch.Name</td>
                        
                        <td>
                            <div class="btn-group">
                                @* <a class="btn-primary btn" asp-action="Details" asp-route-id=@branch.Id>View</a> *@
                                @* <a class="btn-primary btn" asp-action="DetailsBranch" asp-route-id=@branch.Id>View</a> *@
                            </div>
                            <td>
                            <div>
                                @* <a class="btn-warning btn" asp-action="Update" asp-route-id=@branch.Id>Edit</a> *@
                            </div>
                            </td>
                            
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}