@model RDMS.Models.Dtos.CustomerDto
@* <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" /> *@
@{
    ViewData["Title"] = "Customer Details";
}


  <style>
    
.gradient-custom {
/* fallback for old browsers */
@* background: #f6d365; *@

/* Chrome 10-25, Safari 5.1-6 */
background: -webkit-linear-gradient(to right bottom, rgb(214, 213, 207), rgba(253, 160, 133, 1));

/* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
background: linear-gradient(to right bottom, rgb(194, 192, 185), rgb(104, 88, 84))
}
  </style>


<section class="vh-100" style="background-color: #f4f5f7;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col col-lg-6 mb-4 mb-lg-0">
        <div class="card mb-3" style="border-radius: .5rem;">
          <div class="row g-0">
            <div class="col-md-4 gradient-custom text-center text-white"
              style="border-top-left-radius: .5rem; border-bottom-left-radius: .5rem;">
            <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava3.webp" 
                alt="Avatar" class="img-fluid my-5" style="width: 80px;" />
              <h5>Customer <Details></Details>  </h5>
              <p>@Model.FirstName</p>
              <i class="far fa-edit mb-5"></i>
            </div>
            <div class="col-md-8">
              <div class="card-body p-4">
                <h6>Information</h6>
                <hr class="mt-0 mb-4">
                <div class="row pt-1">
                  <div class="col-6 mb-3">
                    <h6>Email</h6>
                    <p class="text-muted">@Model.Email</p>
                  </div>
                  <div class="col-6 mb-3">
                    <h6>PhoneNumber</h6>
                    <p class="text-muted">@Model.PhoneNumber</p>
                  </div>
                </div>
                <hr class="mt-0 mb-4">
                <div class="row pt-1">
                  <div class="col-6 mb-3">
                    <h6>FirstName</h6>
                    <p class="text-muted">@Model.FirstName</p>
                  </div>
                  <div class="col-6 mb-3">
                    <h6> LastName</h6>
                    <p class="text-muted">@Model.LastName</p>
                  </div>
                </div>
                <div class="d-flex justify-content-start">        
                 <a asp-action="Customer" asp-controller="User" class="btn btn-warning">Back</a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
