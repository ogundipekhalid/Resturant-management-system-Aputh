<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">

<style>
    body {
        background-color: #f5f8fa; /* Milky white color */
    }

    .container {
        max-width: 600px;
        margin: 50px auto;
    }

    h1 {
        margin-bottom: 30px;
        color: #8b5c8d; /* Purple color */
    }

    table {
        margin-bottom: 30px;
    }

    .text-center {
        text-align: center;
    }

    .text-end {
        text-align: right;
    }

    .btn-danger {
        background-color: #f44336; /* Red color */
        border-color: #f44336; /* Red color */
    }

    .btn-danger:hover {
        background-color: #c62828; /* Darker red color */
        border-color: #c62828; /* Darker red color */
    }
</style>

@model RDMS.Models.Dtos.EateryDto

@{
    ViewData["Title"] = "Delete Eatery";
}

<div class="container">
    <div class="border p-4">
        <h1 class="text-center">@ViewData["Title"]</h1>
        <div class="row">
            <div class="col-lg-12">
                <div class="text-center">
                    <p>Are you sure you want to delete this Company?</p>
                    <p>This action cannot be undone.</p>
                </div>
                <table class="table table-bordered table-striped">
                    <tbody>
                        <tr>
                            <td><strong>Id</strong></td>
                            <td>@Model.Id</td>
                        </tr>
                        <tr>
                            <td><strong>Company Name</strong></td>
                            <td>@Model.Name</td>
                        </tr>
                        <tr>
                            <td><strong>CAC Registration Num</strong></td>
                            <td>@Model.CertificationNumber</td>
                        </tr>
                        <tr>
                            <td><strong>Certificate Document</strong></td>
                            <td>@Model.Certificate</td>
                        </tr>
                        <tr>
                            <td><strong>Logo</strong></td>
                            <td>@Model.Logo</td>
                        </tr>
                    </tbody>
                </table>
                <div class="text-end">
                    <form asp-action="Delete">
                        <input type="hidden" name="id" value="@Model.Id" />
                        <button type="submit" class="btn btn-danger">Delete Company</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
