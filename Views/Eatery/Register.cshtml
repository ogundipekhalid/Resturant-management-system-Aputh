  <script>
  function validateForm() {
    // Validation for Manager FirstName (only letters)
    var firstNameInput = document.querySelector('input[name="FirstName"]');
    if (!/^[a-zA-Z]+$/.test(firstNameInput.value)) {
      alert("Manager FirstName can only contain letters.");
      firstNameInput.focus();
      return false;
    }

    // Validation for Manager LastName (only letters)
    var lastNameInput = document.querySelector('input[name="LastName"]');
    if (!/^[a-zA-Z]+$/.test(lastNameInput.value)) {
      alert("Manager LastName can only contain letters.");
      lastNameInput.focus();
      return false;
    }

    // Validation for Manager Email (valid email format)
    var emailInput = document.querySelector('input[name="Email"]');
    if (!/^\S+\S+\.\S+$/.test(emailInput.value)) {
      alert("Please enter a valid Manager Email.");
      emailInput.focus();
      return false;
    }

    // Validation for Manager PhoneNumber (11 digits)
    var phoneNumberInput = document.querySelector('input[name="PhoneNumber"]');
    if (!/^\d{11}$/.test(phoneNumberInput.value)) {
      alert("Manager PhoneNumber must be exactly 11 digits.");
      phoneNumberInput.focus();
      return false;
    }

    // Validation for Manager Password (at least 8 characters, one letter, and one number)
    var passwordInput = document.querySelector('input[name="Password"]');
    if (!/^(?=.*\d)(?=.*[a-zA-Z]).{8,}$/.test(passwordInput.value)) {
      alert("Manager Password must be at least 8 characters long and contain at least one letter and one number.");
      passwordInput.focus();
      return false;
    }

    // Validation for Street (only letters, numbers, and spaces)
    var streetInput = document.querySelector('input[name="Street"]');
    if (!/^[a-zA-Z0-9\s]+$/.test(streetInput.value)) {
      alert("Street address can only contain letters, numbers, and spaces.");
      streetInput.focus();
      return false;
    }

    // Validation for City (only letters and spaces)
    var cityInput = document.querySelector('input[name="City"]');
    if (!/^[a-zA-Z\s]+$/.test(cityInput.value)) {
      alert("City name can only contain letters and spaces.");
      cityInput.focus();
      return false;
    }

    // Validation for State (only letters and spaces)
    var stateInput = document.querySelector('input[name="State"]');
    if (!/^[a-zA-Z\s]+$/.test(stateInput.value)) {
      alert("State name can only contain letters and spaces.");
      stateInput.focus();
      return false;
    }

    // Validation for Eatery Name (required field)
    var eateryNameInput = document.querySelector('input[name="Name"]');
    if (eateryNameInput.value.trim() === "") {
      alert("Please enter Eatery Name.");
      eateryNameInput.focus();
      return false;
    }

    // Validation for Certificate Number (required field)
    var certificationNumberInput = document.querySelector('input[name="CertificationNumber"]');
    if (certificationNumberInput.value.trim() === "") {
      alert("Please enter Certificate Number.");
      certificationNumberInput.focus();
      return false;
    }

    // Validation for ZipCode (6 digits)
    var zipCodeInput = document.querySelector('input[name="ZipCode"]');
    if (!/^[0-9]{6}$/.test(zipCodeInput.value)) {
      alert("ZipCode must be exactly 6 digits.");
      zipCodeInput.focus();
      return false;
    }

    // Add any additional validations for file inputs (Logo and Certificate) if needed.

    // If all validations pass, the form will be submitted.
    return true;
  }
</script>




