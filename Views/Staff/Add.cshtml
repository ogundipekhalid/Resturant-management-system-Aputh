    @* <section style="background-color: #eee;"> *@
<body style="background-color: rgb(143, 154, 163);" >
  <div class="wrapper">
    <h2>Registration</h2>
    <form asp-action="Add" asp-controller="Staff" >
      <div class="input-box">
        <input name="branchId" value="Model.branchId" hidden>
      </div>
      <div class="input-box">
        @* <label asp-for="FirstName"></label> *@
        <label for="">FirstName</label>
        <input type="text" asp-for="FirstName" required>
        <span asp-validation-for="FirstName"></span>
      </div>
      <div class="input-box">
        @* <label asp-for="LastName"></label> *@
        <label for="">LastName</label>
        <input type="text" asp-for="LastName" required>
        <span asp-validation-for="LastName"></span>
      </div>
      <div class="input-box">
        <label asp-for="Email"></label>
        <input type="email" asp-for="Email" placeholder="Enter your email" required>
        <span asp-validation-for="Email"></span>
        <p> @if (TempData["ErrorMessage"] != null)
          {<h1>@TempData["ErrorMessage"]</h1>}</p>
      </div>
      <div class="input-box">
        <label asp-for="PhoneNumber"></label>
        <input type="number" asp-for="PhoneNumber" placeholder="phonenumber" required>
        <span asp-validation-for="PhoneNumber"></span>
      </div>
      <div class="input-box">
        <label asp-for="Password"></label>
        <input type="password" asp-for="Password" placeholder="enter your password" required>
        <span asp-validation-for="Password"></span>
      </div>
      <div class="input-box">
        <label asp-for="Street"></label>
        <input type="text" asp-for="Street"  placeholder="enter branch Staff street" required>
        <span asp-validation-for="Street"></span>
      </div>
      <div class="input-box">
        <label asp-for="State"></label>
        <input type="text" asp-for="State" placeholder="enter your State" required>
        <span asp-validation-for="State"></span>
      </div>
      <div class="input-box">
        <label asp-for="City"></label>
        <input type="text" asp-for="City" placeholder="enter your City" required>
        <span asp-validation-for="City"></span>
      </div>
      <div class="input-box">
        <label asp-for="ZipCode"></label>
        <input type="number" asp-for="ZipCode" placeholder="enter your ZipCode" required>
        <span asp-validation-for="ZipCode"></span>
      </div>
      <div class="form-group">
        <label for="Roles">Role</label>
        <select name="Roles" class="form-control" required>
          <option value="Roles" disabled>--select role--</option>
          <option value="1">dispather</option>
          @* <option value="2">Chef</option>
          <option value="3">Cleaner</option> *@
        </select>
      </div>
      <br>
      <div class="input-box button">
        <input type="Submit" value="Register Now">
      </div>
      <div class="text">
        <h3>Already have an account? <a asp-action="Login" asp-controller="User">Login now</a></h3>
      </div>
    </form>
  </div>
</body>
